@model MvcLearning.Model.Entities.TodoModel

<form asp-action="Create" method="post" class="mt-5 w-50 mx-auto bg-dark text-light p-4 rounded shadow">
    <h4 class="mb-4">Add New Todo</h4>

    <div class="mb-3">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control bg-light" placeholder="Enter task title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control bg-light" rows="4" placeholder="Enter task description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Add Todo</button>
</form>
