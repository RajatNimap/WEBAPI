@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]  Hospital Management</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                🏥 Hospital Management
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarHospital" aria-controls="navbarHospital"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarHospital">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Patients" asp-action="Index">Patients</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Doctors" asp-action="Index">Doctors</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Departments" asp-action="Index">Departments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Appointments" asp-action="Index">Appointments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Reports" asp-action="Index">Reports</a></li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="btn btn-outline-light me-2" asp-controller="Home" asp-action="Login">Login</a></li>
                    <li class="nav-item"><a class="btn btn-warning" asp-controller="Home" asp-action="Register">Register</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Body -->
    <main class="flex-grow-1 container mt-4">
        @RenderBody()
    </main>
    <!-- Footer -->
    <footer class="bg-light text-center text-muted py-3 mt-auto border-top">
        <div class="container">
            <p class="mb-0">&copy; @DateTime.Now.Year - Hospital Management System</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- 👈 Added -->
    @RenderSection("script", required: false)

</body>
</html>

