@model Hospital_Management.Models.EntitiesDto.LoginDto;
@{

    Layout = "_Layout"; 
}
<div id="error" asp-validation-summary="All" class="" role="alert">
</div>

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="mb-0">Login</h4>
            </div>
            <div class="card-body">
                <form id="loginForm"method="POST" asp-controller="Home" asp-action="Login" >
                    <!-- Email -->
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email address</label>
                        <input id="Email" name="Email" type="email" class="form-control" required />
                    </div>

                    <!-- Password -->
                    <div class="mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input id="Password" name="Password" type="password" class="form-control" required />
                    </div>

                    <!-- Submit -->
                    <button type="submit" class="btn btn-primary w-100" id="btn">Login</button>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>
                    Don’t have an account? <a asp-action="Register" asp-controller="Home">Register here</a>
                </small>
            </div>
        </div>
    </div>
</div>

@section script
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>


   
}

<script>
    $(document).ready(function () {
        // Check if there are validation errors inside #error
        if ($.trim($("#error").html()).length > 0) {
            $("#error")
            .addClass("alert alert-danger") // Add Bootstrap alert class
                .fadeIn()
                .delay(3000)
                .fadeOut();
                  $("#error").removeClass("alert alert-danger");
        }

    });
</script>
